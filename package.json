{
  "name": "sketch-constructor",
  "version": "0.1.0",
  "description": "Read/write/manipulate Sketch files in Node without Sketch plugins!",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --fix index.js models/**/*.js utils/**/*.js",
    "test": "npm run prettier:check && npm run lint && jest --runInBand",
    "commit": "git-cz",
    "preversion": "npm test",
    "release": "git add . && standard-version -a",
    "prettier:check": "prettier --list-different index.js \"models/**/*.js\" \"utils/**/*.js\"",
    "docs:build": "jsdoc --configure jsdoc.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "verbose": false,
    "testPathIgnorePatterns": [
      "/__tests__/__helpers.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amzn/sketch-constructor.git"
  },
  "keywords": [
    "sketch",
    "node"
  ],
  "author": "Amazon",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/amzn/sketch-constructor/issues"
  },
  "contributors": [
    "Danny Banks <djb@amazon.com>"
  ],
  "homepage": "https://github.com/amzn/sketch-constructor#readme",
  "dependencies": {
    "fs-extra": "^7.0.1",
    "jszip": "^3.1.5",
    "tinycolor2": "^1.4.1",
    "uuid-v4": "^0.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.3.2",
    "@commitlint/config-conventional": "^7.3.1",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.6.0",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "jsdoc": "^3.5.5",
    "lint-staged": "^8.1.0",
    "minami": "^1.2.3",
    "prettier": "^1.16.1",
    "standard-version": "^4.4.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
